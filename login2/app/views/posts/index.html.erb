<div id="post">
<div class="container" >
	<div class="row">
		<div class="center mid">
			<div class="user-info border">
				<p class="block"></p>
				<img src="<%= asset_path( 'user-image.png' ) %>" alt="" class="img img-rounded img-responsive pull-right border" style="width:25px; border-radius: 100%;padding:2px;">
			</div>
			<div class="middle">
				<%= form_for @post, as: :post, html: { class: "form_post" } do |f|  %>
				  <%= f.text_area :content, placeholder: "Add content..."  %><br />

				  <%= f.submit class:"btn btn-default button-right border pull-right"%>


				<% end %>
				
				<% flash.each do |key, value| %>

					<div class="alert alert-info"><%= value %></div>
				<% end %>
				
				<%if @posts %>
					<% @posts.each do |post| %>

						<div class="media border">
							<div class="media-left">
								<img src="<%= asset_path( 'user-image.png' ) %>" class="media-object" style="width:25px">
							</div>
							<div class="media-body">
								<h4 class="media-heading"><%= post.user.first_name + " " + post.user.last_name %></h4>
								<p><%= post.content %></p>
							</div>
							<p><%= link_to 'Comment this post', post_comments_path(post) %> | 
							<%= link_to 'Delete this post', post, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{post.content}" %> 
                                </p>
						</div>
					<%end%>
				<% else %>
					<p>Not found any post!</p>
				<% end %>
			</div>
		</div>
	</div>
</div>
</div>